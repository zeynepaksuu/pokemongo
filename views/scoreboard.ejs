<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SCOREBOARD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/score.css">


</head>
<body>

  <table id = 'scoretable' class="table table-light table-striped table-bordered border-dark">

    <thead>
      <tr>
        <th scope="col" class="text-center">TOP PLAYERS</th>
        <th scope="col" class="text-center">PLAYER NAME</th>
        <th scope="col" class="text-center">SCORE</th>
      </tr>
    </thead>

    <tbody>
      <% for (var i =0; i < rows.length;  i++ ) { %>
        <tr  class= <% if(i<1) { %> <%= "table-success" %> <% } else if (i>0 && i<3) { %> <%= "table-info" %> <% } else { %> <%= "table-warning" %> <% } %>> <th scope="row" class="text-center"><%= i+1 %></th><td><%= rows[i].username %></td><td><%= rows[i].score %></td></tr>
        <% } %>
      
    </tbody>

  </table>

<!--bootstrap-->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>




</body>
</html>